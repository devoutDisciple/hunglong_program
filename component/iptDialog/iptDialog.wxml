<van-dialog
  use-slot
  title="写出你感兴趣的内容"
  show="{{ show }}"
  show-cancel-button
  bind:close="onClose"
  confirmButtonText="提交"
>
    <view class="content">
        <van-field
            value="{{ value }}"
            placeholder="请输入"
            border="{{ false }}"
            auto-focus="{{ true }}"
            maxlength="{{ 6 }}"
            bind:change="onChange"
            input-class="ipt"
        />
    </view>
  
</van-dialog>