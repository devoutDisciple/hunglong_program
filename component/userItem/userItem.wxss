.user {
    height: 90rpx;
    font-size: 34rpx;
    display: flex;
}

.user_photo {
    width: 90rpx;
}

.user_photo image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 100%;
}

.user_desc {
    flex: 1;
    margin-left: 15rpx;
}

.user_msg {
    height: 40rpx;
    margin-top: 5rpx;
    display: flex;
    align-items: center;
}

.user_msg_name {
    font-size: 28rpx;
    color: #333;
    max-width: 300rpx;
    margin-right: 10rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.user_sign {
    height: 30rpx;
    margin-top: 10rpx;
    font-size: 22rpx;
    color: #999999;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.attention {
    display: flex;
    align-items: center;
    justify-content: center;
}