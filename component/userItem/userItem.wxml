<view class="user">
    <view class="user_photo">
        <image src="{{detail.userDetail.photo}}" />
    </view>
    <view class="user_desc">
        <view class="user_msg">
            <view class="user_msg_name">{{detail.userDetail.username}}</view>
            <view class="user_msg_order">
                <image src="/asserts/public/vip1.png" />
            </view>
            <view class="user_msg_level">
                <view class="user_msg_level_txt">小白 1</view>
            </view>
        </view>
        <view class="user_sign">{{detail.userDetail.sign}}</view>
    </view>
    <view class="user_attention">
        <view wx:if="{{hasAttention}}" class="attention_btn">已关注</view>
        <view wx:else class="attention_not_btn">关注</view>
    </view>
</view>