<view class="posts">
    <post-header type="{{detail.type}}" createTime="{{detail.create_time}}" userDetail="{{detail.userDetail}}"/>
    <battle-con detail="{{detail.battleDetail}}"/>
    <post-topic topics="{{detail.topic_names}}" circles="{{detail.circle_names}}"/>
    <view class="reply">
        <hot-reply bindOnTapGood="onTapGood" bindOnTapCon="onTapCon"/>
    </view>
    <action-opt detail="{{detail}}" bindOnTapShare="onTapShare" bindOnTapMsg="onTapCon" bindOnTapGood="onTapGood"/>
</view>