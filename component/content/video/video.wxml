<view class="posts">
    <post-header type="{{detail.type}}" createTime="{{detail.create_time}}" userDetail="{{detail.userDetail}}"/>
    <post-txt type="{{detail.type}}" detail="{{detail.videoDetail}}" contentDetail="{{detail}}"/>
    <simple-video videoId="my_video" wx:if="{{detail.videoDetail && detail.videoDetail.url}}" videoDetail="{{detail.videoDetail}}"/>
    <post-topic topics="{{detail.topic_names}}" circles="{{detail.circle_names}}"/>
    <view class="reply">
        <hot-reply 
            type="{{detail.type}}"
            contentId="{{detail.id}}" 
            replyDetail="{{detail.hotReply}}" 
            wx:if="{{detail.hotReply && detail.hotReply.id}}"/>
    </view>
    <action-opt detail="{{detail}}"/>
</view>