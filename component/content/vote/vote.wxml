<view class="posts">
    <post-header type="{{detail.type}}" createTime="{{detail.create_time}}" userDetail="{{detail.userDetail}}"/>
    <vote-con bindOnTapSelect="onTapSelectItem" detail="{{detail.voteDetail}}" contentDetail="{{detail}}"/>
    <post-topic topics="{{detail.topic_names}}" circles="{{detail.circle_names}}"/>
    <view class="reply">
       <hot-reply 
            type="{{detail.type}}"
            contentId="{{detail.id}}" 
            replyDetail="{{detail.hotReply}}" 
            wx:if="{{detail.hotReply && detail.hotReply.id}}"/>
    </view>
    <action-opt bindOnTapGoods="onTapGoods" detail="{{detail}}"/>
</view>