<van-action-sheet
    title=""
    show="{{ visible }}"
    bind:close="onClose">
    <view class="content">
        <block wx:if="{{tempFilePaths && tempFilePaths.length !== 0}}">
            <view class="img_con">
                <block wx:for="{{tempFilePaths}}" wx:key="index">
                    <view class="img_chunk">
                        <image class="img" src="{{item}}" />
                        <image class="img_close" data-idx="{{index}}" bindtap="onRemoveImg" src="/asserts/public/close.png" />
                    </view>
                </block>
            </view>
        </block>
        <view class="desc">
            <input 
                focus="{{focus}}" 
                cursor-spacing="180" 
                class="ipt" 
                bindinput="onChangeValue"
                placeholder="好话一句句，让人心情变美丽" 
                maxlength="200" 
                confirm-type="send"/>
            <view class="send" bindtap = "onSendMsg">发送</view>
        </view>
        <view class="icon">
            <image class="icon_img" bindtap="onChooseImg" src="/asserts/public/img.png" />
            <image class="icon_img" src="/asserts/public/emoji.png" />
        </view>
    </view>
</van-action-sheet>