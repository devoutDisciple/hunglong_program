<view class="wrap">
    <view class="title">{{detail.title}}</view>
    <view class="battle">
        <view class="battle_chunk">
            <img data="{{detail.red_url}}"/>
        </view>
        <view class="battle_icon">
            <image src="/asserts/public/vs.png"/>
        </view>
        <view class="battle_chunk">
            <img data="{{detail.blue_url}}"/>
        </view>
    </view>
    <view class="progress">
        <view class="progress_left" style="width: {{redTeam}}"/>
        <view class="progress_icon" style="left: calc({{redTeam}} - 25rpx)">
            <image src="/asserts/public/pk.png"/>
        </view> 
        <view class="progress_right" />
    </view>
    <view class="name">
        <view class="red_name">{{detail.red_name}}</view>
        <view class="blue_name">{{detail.blue_name}}</view>
    </view>
    <view class="btn">
        <view class="btn_left">
            <view class="btn_select">已选中</view>
        </view>
        <view class="btn_right">
            <view class="btn_noSe">选择</view>
        </view>
    </view>
</view>
