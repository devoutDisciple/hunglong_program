.wrap {
    font-size: 26rpx;
}

.title {
    margin-top: 10rpx;
    padding-left: 10rpx;
}

.battle {
    display: flex;
    overflow: hidden;
    padding: 10rpx 0;
}

.battle_chunk {
    width: calc((100vw - 140rpx) / 2);
    height: calc((100vw - 140rpx) / 2);
    overflow: hidden;
    border-radius: 20rpx;
}

.battle_chunk image {
    width: 100%;
    height: 100%;
}

.battle_icon {
    width: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.battle_icon image {
    height: 40rpx;
    width: 80rpx;
}

.progress {
    display: flex;
    align-items: center;
    height: 50rpx;
}

.progress_left {
    height: 20rpx;
    border-radius: 20rpx;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    background: linear-gradient(to right, #ec3d6c, #ff8af3);
}

.progress_right {
    flex: 1;
    height: 20rpx;
    border-radius: 20rpx;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    background: linear-gradient(to right, #74d8ff, #2e8ee6);
}

.progress_icon {
    height: 50rpx;
    width: 50rpx;
    position: absolute;
}

.progress_icon image {
    width: 50rpx;
    height: 50rpx;
}

.name {
    display: flex;
    /* margin-top: 5rpx; */
    padding: 0 10rpx;
    font-size: 22rpx;
    color: #404040;
}

.red_name {
    flex: 1;
    text-align: left;
}

.blue_name {
    flex: 1;
    text-align: right;
}

.btn {
    margin-top: 15rpx;
    margin-bottom: 8rpx;
    display: flex;
}

.btn_left {
    flex: 1;
    display: flex;
}

.btn_right {
    flex: 1;
    display: flex;
    justify-content: flex-end;
}

.btn_select {
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 20rpx;
    background: linear-gradient(to right, #ec3d6c, #fdb9e2);
    color: #fff;
    border-radius: 50rpx;
}

.btn_noSe {
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 20rpx;
    background: #ededed;
    color: #4a4a4a;
    border-radius: 50rpx;
}