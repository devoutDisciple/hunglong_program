.wrap {
    margin-top: 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    /* padding: 20rpx; */
    display: flex;
    justify-content: space-around;
}

.chunk {
    width: 30%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    color: #999;
    position: relative;
}

.share_btn {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.chunk image {
    height: 30rpx;
    width: 30rpx;
    margin-right: 15rpx;
}