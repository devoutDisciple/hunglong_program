.btn {
    height: 100%;
    display: flex;
    width: 100%;
    justify-content: center;
    align-items: center;
    position: relative;
}

.btn image {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.btn_txt {
    position: absolute;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    text-align: center;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}