<view class="wrap">
    <scroll-view class="content" scroll-y="{{true}}">
        <view class="title" wx:if="{{type !== 'blogs'}}">{{detail.postsDetail.title}}</view>
        <view class="detail">
            <post-header type="{{detail.type}}" createTime="{{detail.create_time}}" userDetail="{{detail.userDetail}}"/>
            <slot></slot>
            <post-topic topics="{{detail.topic_names}}" circles="{{detail.circle_names}}"/>
        </view>
        <view class="comment">
            <view class="comment_title">
                <view class="comment_title_left">评论</view>
                <view class="comment_title_right">
                    {{detail.comment}}<image src="/asserts/public/good_select.png"/>
                </view>
            </view>
            <view class="comment_con">
                <comment bindSearchReply="searchReply" type="post" imgList="{{replyImgList}}"/>
                <comment bindSearchReply="searchReply" type="post" imgList="{{replyImgList}}"/>
                <comment bindSearchReply="searchReply" type="post" imgList="{{replyImgList}}"/>
                <comment bindSearchReply="searchReply" type="post" imgList="{{replyImgList}}"/>
                <comment bindSearchReply="searchReply" type="post" imgList="{{replyImgList}}"/>
                <comment bindSearchReply="searchReply" type="post" imgList="{{replyImgList}}"/>
                <comment bindSearchReply="searchReply" type="post" imgList="{{replyImgList}}"/>
                <comment bindSearchReply="searchReply" type="post" imgList="{{replyImgList}}"/>
                <comment bindSearchReply="searchReply" type="post" imgList="{{replyImgList}}"/>
                <comment bindSearchReply="searchReply" type="post" imgList="{{replyImgList}}"/>
            </view>
        </view>
        <btm-empty />
    </scroll-view>
    <view class="footer">
        <view class="footer_chunk">
            <image src="/asserts/public/share.png"/>
            转发
        </view>
        <view class="footer_split" />
        <view class="footer_chunk" bindtap = "onShowIptDialog">
            <image src="/asserts/public/message.png"/>
            评论
        </view>
        <view class="footer_split" />
        <view class="footer_chunk">
            <image src="/asserts/public/good.png"/>
            赞
        </view>
    </view>
    <reply-ipt visible="{{iptVisible}}" focus="{{iptFocus}}" bindOnClose="onCloseIptDialog"/>
</view>