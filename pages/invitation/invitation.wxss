.wrap {
    font-size: 30rpx;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    position: relative;
}

.header {
    width: 100vw;
    text-align: center;
    position: absolute;
    color: #333;
    font-size: 30rpx;
}

.head_img {
    position: absolute;
    left: 0;
    top: 0;
    margin-top: 5px;
    width: 20px;
    height: 20px;
    z-index: 5;
}

.bg_img {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    z-index: -1;
}

.con {
    min-height: 100vh;
    position: relative;
    display: flex;
    flex-direction: column;
}

.con ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.container {
    padding: 20rpx;
    padding-top: 10rpx;
}

.footer {
    background: #f65f93;
    flex: 1;
}

.title {
    color: #fff;
    font-size: 60rpx;
    font-weight: 900;
    display: flex;
    justify-content: center;
    align-items: center;
}

.title_img {
    width: 318rpx;
    height: 96rpx;
}

.sort {
    margin-top: 80rpx;
    display: flex;
    padding: 0 20rpx;
}

.sort_chunk {
    flex: 1;
    display: flex;
    align-items: flex-end;
    position: relative;
}

.sort_chunk:last-child {
    margin-left: -1rpx;
}

.sort_chunk_img {
    width: 100%;
}

.photo {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    transform: translate(-50rpx);
    border-radius: 100%;
}

.photo_1 {
    left: 50%;
    top: -20rpx;
}

.photo_2 {
    left: 50%;
    top: -50rpx;
}

.photo_3 {
    left: 50%;
    top: -20rpx;
}

.sort_desc1 {
    position: absolute;
    top: 90rpx;
    width: 100%;
}

.sort_desc2 {
    position: absolute;
    top: 63rpx;
    width: 100%;
}

.sort_desc3 {
    position: absolute;
    top: 90rpx;
    width: 100%;
}

.sort_name {
    font-size: 30rpx;
    color: #333333;
    display: flex;
    justify-content: center;
}

.sort_level {
    margin-top: 5rpx;
    display: flex;
    justify-content: center;
}

.progress {
    margin-top: 50rpx;
}

.progress_dot {
    padding: 0 10rpx;
    height: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.progress_dot_chunk {
    width: 8rpx;
    height: 8rpx;
    background: #fff;
    border-radius: 100%;
}

.process_level {
    height: 10rpx;
    margin-top: 10rpx;
    background-image: linear-gradient(90deg, rgba(255,255,255,0.14) 45%, rgba(255,255,255,0.32) 100%);
    border-radius: 10rpx;
    position: relative;
}

.process_modal {
    position: absolute;
    width: 20%;
    background: #fff;
    height: 100%;
    left: 0;
    top: 0;
    border-radius: 10rpx;
}

.level {
    margin-top: 15rpx;
    height: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.level_chunk {
    font-size: 22rpx;
    color: #fff;
}

.invitation {
    margin-top: 30rpx;
    padding: 40rpx;
    background: #fff;
    border-radius: 20rpx;
}

.invi_chunk {
    height: 80rpx;
    display: flex;
    margin-bottom: 50rpx;
}

.invi_chunk:last-child {
    margin-bottom: 0;
}

.invi_chunk_icon {
    width: 80rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.invi_chunk_icon_img {
    height: 66rpx;
    width: 59rpx;
}

.invi_chunk_con {
    flex: 1;
}

.invi_chunk_con_title {
    height: 40rpx;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #333;
}

.invi_chunk_con_desc {
    height: 40rpx;
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #999;
}

.invi_chunk_btn {
    width: 130rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.share_btn {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.invi_chunk_btn_con {
    width: 130rpx;
    height: 66rpx;
    font-size: 28rpx;
    background: #f66497;
    color: #fff;
    border-radius: 66rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.intro {
    background: #f65f93;
    padding: 20rpx;
    padding-top: 10rpx;
}

.intro_con {
    background: #fff;
    border-radius: 20rpx;
    padding: 30rpx 20rpx;
}

.intro_title {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 10rpx;
}

.intro_desc {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 5rpx;
}

.intro_desc:last-child {
    margin-bottom: 0;
}