<view class="wrap">
    <header />
    <scroll-view scroll-y="{{true}}" class="content" enhanced="{{true}}" show-scrollbar="{{false}}">
        <view class="icon_list">
            <view class="icon_chunk" wx:for="{{plateList}}" wx:key="id">
                <view class="icon_chunk_img">
                    <image src="{{baseUrl + item.url}}" />
                </view>
                <view class="icon_chunk_txt">
                    {{item.name}}
                </view>
            </view>
        </view>
        <view class="tab">
            <view class="tab_con">
                <van-tabs active="{{ activeTab }}" ellipsis="{{false}}">
                    <block wx:key="id" wx:for="{{circleList}}">
                        <van-tab title="{{item.name}}"/>
                    </block>
                </van-tabs>
            </view>
            
            <view class="tab_add">
                <image src="/asserts/public/tabAdd.png" />
            </view>
        </view>
        <view class="topic {{topicClass}}">
           <view class="topic_con">
                <view class="topic_item">话题1</view>
                <view class="topic_item">话题1</view>
                <view class="topic_item">话题1</view>
                <view class="topic_item">话题1</view>
                <view class="topic_item">话题1</view>
                <view class="topic_item">话题1</view>
                <view class="topic_item">话题1</view>
           </view>
           <view class="topic_icon" bindtap="cntOpen">
                <image wx:if="{{topicClass !== 'topic_open'}}" src="/asserts/public/arrow_top.png" />
                <image wx:else src="/asserts/public/arrow_btm.png" />
           </view>
        </view>
        <home-post 
            bindOnTapCon="onTapCon" 
            bindOnTapGood="onTapGood" 
            bindOnTapReplyCon="onTapCon" 
            bindOnTapShare="OnTapShare" 
            bindOnTapMsg="onTapCon"/>
        <home-post />
        <home-post />
        <home-post />
        <home-post />
        <home-post />
    </scroll-view>
</view>