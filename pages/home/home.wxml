<!--pages/home/home.wxml-->

<view class="login_btn">
    <button class="btn" open-type="getUserInfo" bindgetuserinfo="getUserInfo" plain="{{true}}">获取用户信息</button>
    <image class="login_bg" src="/asserts/tabBar/login_btn.png" />
    <text class="txt">登录</text>
    <my-test>
        <text>
            自定义组件
        </text>
    </my-test>
    <button bindtap="showPopup">评论</button>
    <van-popup 
        show="{{ show }}" 
        closeable 
        round 
        bind:close="onClose" 
        custom-style="height: 80%" 
        position="bottom">
        内容
    </van-popup>
    <van-button  type="primary">转圈</van-button>
    <view class="content">
        <view  bindtap="hello" class="circle {{animationClass}}">+</view>
        <view class="mask  {{animationMask}}"></view>
    </view>
    
</view>