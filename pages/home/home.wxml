<view class="wrap">
    <header />
    <scroll-view scroll-y="{{true}}" class="content">
        <view class="icon_list">
            <view class="icon_chunk" wx:for="{{iconList}}" wx:key="key">
                <view class="icon_chunk_img">
                    <image src="{{item.iconUrl}}" />
                </view>
                <view class="icon_chunk_txt">
                    {{item.title}}
                </view>
            </view>
        </view>
        <view class="tab">
            <view class="tab_con">
                <van-tabs active="{{ activeTab }}" ellipsis="{{false}}">
                    <van-tab title="关注" />
                    <van-tab title="广场" />
                    <van-tab title="推荐" />
                    <van-tab title="杭州一中1111" />
                    <van-tab title="杭州二中" />
                    <van-tab title="杭州三中" />
                </van-tabs>
            </view>
            
            <view class="tab_add">
                <image src="/asserts/public/tabAdd.png" />
            </view>
        </view>
        <view class="topic {{topicClass}}">
           <view class="topic_con">
                <view class="topic_item">话题1</view>
                <view class="topic_item">话题1</view>
                <view class="topic_item">话题1</view>
                <view class="topic_item">话题1</view>
                <view class="topic_item">话题1</view>
                <view class="topic_item">话题1</view>
                <view class="topic_item">话题1</view>
           </view>
           <view class="topic_icon" bindtap="cntOpen">
                <image wx:if="{{topicClass !== 'topic_open'}}" src="/asserts/public/arrow_top.png" />
                <image wx:else src="/asserts/public/arrow_btm.png" />
           </view>
        </view>
        <home-post />
    </scroll-view>
</view>