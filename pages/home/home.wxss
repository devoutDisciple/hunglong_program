.wrap {
    height: 100vh;
    display: flex;
    flex-direction: column;
    font-size: 34rpx;
    position: relative;
}

.content {
    flex: 1;
    overflow: hidden;
    background: #eeeeee;
}

.content ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.icon_list {
    min-height: 250rpx;
    display: flex;
    flex-wrap: wrap;
    padding: 40rpx 20rpx;
    padding-bottom: 0;
    background: #fff;
    justify-content: space-around;
    margin-bottom: 20rpx;
}

.icon_chunk {
    width: calc((100vw - 40rpx) / 4);
    text-align: center;
    margin-bottom: 40rpx;
}

.icon_chunk_img {
    width: calc((100vw - 40rpx) / 10);
    height: calc((100vw - 40rpx) / 10);
}

.icon_chunk_txt {
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #333;
}

.tab {
    display: flex;
    flex-direction: row;
    overflow: hidden;
    height: 90rpx;
    background: #fff;
}

.tab_con {
    flex: 1;
    overflow: hidden;
}

.tab_container {
    max-width: 100%;
}

.tab_con .van-tab {
    overflow: hidden;
    font-size: 28rpx;
    color: #666666;
}

.tab_con .van-tab--active {
    font-size: 40rpx;
    color: #333;
}

.tab_add {
    width: 90rpx;
}

.tab_add .tab_add_img {
    height: 90rpx;
    width: 90rpx;
}

.topic {
    display: flex;
    flex-direction: row;
    padding: 0 18rpx;
    background: #eeeeee;
}

.topic_origin {
    height: 92rpx;
    overflow: hidden;
}

.topic_close {
    overflow: hidden;
    animation: an_close .1s ease forwards;
}

.topic_open {
    animation: an_open .1s ease forwards;
    padding-bottom: 14rpx;
}

.topic_con {
    flex: 1;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.topic_item {
    padding: 0 30rpx;
    height: 70rpx;
    line-height: 70rpx;
    background: #fff;
    border-radius: 40rpx;
    color: #333;
    font-size: 28rpx;
    margin-top: 14rpx;
    margin-right: 14rpx;
}

.topic_active_item {
    background: #f54572;
    color: #fff;
}

.topic_icon {
    margin-top: 14rpx;
    width: 60rpx;
    height: 60rpx;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50rpx;
}

.topic_icon .topic_icon_img {
    width: 34rpx;
    height: 34rpx;
}

@keyframes an_open {
    0% {
        height: 88rpx;
    }

    100% {
        height: auto;
    }
}

@keyframes an_close {
    0% {
        height: auto;
    }

    100% {
        height: 92rpx;
        overflow: hidden;
    }
}

.empty_img {
    height: 800rpx;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}