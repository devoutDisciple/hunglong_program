.con {
    font-size: 26rpx;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
}

.con ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.hot {
    background: #fff;
}

.title {
    display: flex;
    padding: 20rpx;
    margin-top: 10rpx;
}

.top_title {
    margin-top: 0;
}

.title_left {
    flex: 1;
    display: flex;
    align-items: center;
}

.title_name {
    font-size: 28rxp;
    color: #333333;
}

.title_desc {
    flex: 1;
    font-size: 20rpx;
    color: #AAAAAA;
    margin-left: 8rpx;
}

.title_right {
    width: 200rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.title_right_more {
    font-size: 20rpx;
    color: #AAAAAA;
}

.title_right_icon {
    height: 24rpx;
    width: 24rpx;
    margin-left: 3rpx;
}

.hot_circle {
    padding: 0 20rpx;
    height: 260rpx;
    display: flex;
}

.hot_circle_chunk {
    min-width: 204rpx;
    height: 240rpx;
    border-radius: 20rpx;
    overflow: hidden;
    margin-right: 20rpx;
    position: relative;
    box-shadow: 4rpx 5rpx 12rpx 0rpx #8a8a8a;
}

.hot_empty {
    min-width: 20rpx;
    height: 100%;
}

.hot_cicle_chunk_bg {
    width: 100%;
    height: 100%;
}

.hot_circle_chunk_modal {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: #333;
    opacity: 0.2;
    z-index: 1;
}

.hot_circle_chunk_con {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.hot_circle_chunk_photo {
    height: 90rpx;
    width: 90rpx;
    border-radius: 100%;
}

.hot_circle_chunk_name {
    font-size: 28rpx;
    color: #fff;
    margin-top: 20rpx;
    max-width: 190rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.my_attr {
    padding: 20rpx;
    padding-top: 0;
    display: flex;
    flex-wrap: wrap;
}

.my_attr_chunk {
    width: calc((100vw - 40rpx) / 2 - 10rpx);
    height: 120rpx;
    margin-bottom: 30rpx;
    display: flex;
    margin-right: 5rpx;
    align-items: center;
}

.my_attr_chunk_img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
}

.my_attr_chunk_right {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-left: 10rpx;
}

.my_attr_chunk_right_name {
    margin-top: 10rpx;
    height: 42rpx;
    font-size: 28rpx;
    color: #333333;
    align-items: center;
    max-width: 215rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.my_attr_chunk_right_hot {
    height: 60rpx;
    display: flex;
    align-items: center;
}

.empty_gray {
    height: 20rpx;
    background: #eeeeee;
}

.plate_tab .van-tab--active {
    font-size: 40rpx;
}

.plate_wrap {
    padding: 20rpx;
}

.circle_item {
    margin-top: 20rpx;
}

.circle_item:first-child {
    margin-top: 10rpx;
}


.empty_btm {
    height: 20rpx;
}