.wrap {
    font-size: 30rpx;
    color: #333;
    height: calc(100vh - 20rpx);
    width: calc(100vw - 40rpx);
    padding: 20rpx;
    padding-bottom: 0;
}

.wrap ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.title {
    font-size: 36rpx;
    margin-top: 10rpx;
    margin-bottom: 30rpx;
    font-weight: 600;
}

.con {
    line-height: 52rpx;
}

.con_item {
    margin: 20rpx 0;
    text-indent: 53rpx;
}

.time {
    margin: 20rpx 0;
    text-align: right;
    font-size: 22rpx;
    color: #8a8a8a;
}

.empty {
    height: 40rpx;
}