<view class="content">
    <item-icon label="选择背景图" itemkey="1" bindtap = "onSelectBg"></item-icon>
    <item-icon label="从手机中选择" itemkey="2" data-type="album" bindtap = "onSelectPhoto"></item-icon>
    <item-icon label="拍一张" itemkey="3" data-type="camera" bindtap = "onSelectPhoto"></item-icon>
