.wrap {
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.content {
    flex: 1;
    overflow: hidden;
}
.content_scroll{
    margin-top: 20rpx;
    height: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-content: flex-start;
    justify-content: space-between;
}

.img_con {
    width: calc((100vw - 30rpx) / 3);
    height: calc((100vw - 30rpx) / 3); 
    border-radius: 4rpx;
    overflow: hidden;
    position: relative;
}
.img_chunk {
    width: 100%;
    height: 100%;
}
.img_radio {
    position: absolute;
    width: 30rpx;
    height: 30rpx;
    right: 10rpx;
    top: 10rpx
}

.footer {
    margin-top: 14rpx;
    height: 100rpx;
}
.footer button {
    width: 80vw;
    margin-left: 10vw;
    border: 1rpx solid #fa5a81;
}

.footer_btn .van-button__text {
    color: #fa5a81;
}