/* pages/home/home.wxss */
.login_btn{
    /* background: url("asserts/tabBar/home.png"); */
    position: relative;
}
.btn{
    position: absolute;
    left: 0;
    top: 10px;
    width: 100%;
    opacity: 0;
    border: none;
    z-index: 10;
}
.btn::after {
    border: none;
}
.txt{
    position: absolute;
    left: 100px;
    top: 20px;
    z-index: 1;
}
.login_bg{
    width: 100%;
    height: 100px;
}
.content{
    width: 100%;
    height: 20px;
    background: #8a8a8a;
    position: relative;
    margin-top: 100px;
}
.circle {
    position: absolute;
    z-index: 10;
    right: 20px;
    width: 20px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    font-size: 12px;
    border-radius: 100%;
    background: red;
}

.mask {
    position: absolute;
    width: 20px;
    height: 20px;
    right: 20px;
    border-radius: 100%;
    background-color: #8a8a8a;
    opacity: 0.85;
    z-index: 2;
}

.mask_big {
    animation: an3 0.5s both;
}
.mask_small {
    animation: an4 0.5s both;
}


.circle_small {
    animation: an2 0.5s both;
}
.circle_big {
    animation: an1 0.5s both;
}


@keyframes an1 {
    0% {
        transform: rotate(0);
    }
    100% {
        transform: rotate(45deg) scale(2);

    }
}

@keyframes an2 {
    0% {
        transform: rotate(45deg)  scale(2);
    }
    100% {
        transform: rotate(0) scale(1);
    }
}


@keyframes an3 {
    0% {
        transform: scale(1);
    }
   
    100% {
        transform:  scale(80);
    }
}


@keyframes an4 {
    0% {
        transform: scale(80);
        /* opacity: 0.6; */
    }
   
    100% {
        transform:  scale(1);
        /* opacity: 0; */
    }
}