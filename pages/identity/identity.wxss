.wrap {
    height: 100vh;
    width: 100vw;
    display: flex;
    flex-direction: column;
}

.con {
    flex: 1;
    background: #eee;
    padding: 20rpx;
    width: calc(100vw - 40rpx);
}

.con ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.title {
    font-size: 44rpx;
    color: #222;
    margin-top: 100rpx;
}

.desc {
    font-size: 28rpx;
    color: #666;
    margin-top: 10rpx;
    margin-bottom: 100rpx;
}

.chunk {
    background: #fff;
    display: flex;
    align-items: center;
    padding: 50rpx 20rpx;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
}

.chunk_active {
    border: 1rpx solid #FE406D;
}


.chunk_type {
    flex: 1;
    font-size: 30rpx;
    color: #333;
}

.chunk_logo {
    height: 80rpx;
    width: 80rpx;
}


.btm {
    height: 100rpx;
    background: #fff;
    font-size: 30rpx;
    color: #FE406D;
    display: flex;
    align-items: center;
    justify-content: center;
}