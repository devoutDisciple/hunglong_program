.wrap {
    height: 100vh;
    width: 100vw;
    display: flex;
    flex-direction: column;
    font-size: 26rpx;
}
.content {
    flex: 1;
    overflow: hidden;
    background: #eeeeee;
}
.content ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.detail {
    padding: 20rpx;
    width: calc(100vw - 40rpx);
    background: #fff;
}
.comment {
    margin-top: 20rpx;
    background: #fff;
}
.comment_title {
    height: 80rpx;
    background: #fff;
    display: flex;
    padding: 0 20rpx;
}
.comment_title_left {
    flex: 1;
    line-height: 80rpx;
    color: #666666;
}
.comment_title_right {
    width: 200rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    color: #999999;
}
.comment_title_right image{
    width: 24rpx;
    height: 24rpx;
    margin-left: 10rpx;
}

.footer {
    height: 90rpx;
    background: #fff;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.footer image {
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
}
.footer_split {
    width: 1rpx;
    background: #e9e9e9;
    height: 30rpx;
}
.footer_chunk {
    width: calc((100vw / 3)  - 15rpx);
    height: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
    color: #9f9f9f;
}